      - ICECAST_SOURCE_PASSWORD=${ICECAST_SOURCE_PASSWORD_CHUM}
      - ICECAST_ADMIN_PASSWORD=${ICECAST_ADMIN_PASSWORD_CHUM}
      - ICECAST_PASSWORD=${ICECAST_PASSWORD_CHUM}
